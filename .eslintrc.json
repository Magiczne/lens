{
	"root": true,
	"env": {
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 2020
	},
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
	    "plugin:@typescript-eslint/eslint-recommended",
	    "plugin:@typescript-eslint/recommended"
	],
	"rules": {
		"semi": [ "warn", "never" ]
	}
}