{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "outDir": "./dist/",
        "pretty": true,
        "sourceMap": true,
        "target": "es2015"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}