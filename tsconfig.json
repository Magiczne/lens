{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "outDir": "./dist/",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"pretty": true,
        "sourceMap": true,
		"strict": true,
		"target": "es2015"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
