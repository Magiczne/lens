		"@types/node": "^14.10.0",
		"@types/puppeteer": "^3.0.2",
		"@types/yargs": "^15.0.5",
		"@typescript-eslint/eslint-plugin": "^4.1.0",
		"@typescript-eslint/parser": "^4.1.0",
		"@vercel/ncc": "^0.24.0",
