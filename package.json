{
	"name": "@magiczne/lens",
	"version": "1.0.0",
	"description": "Create screenshots of your webpage in different resolutions in a matter of seconds.",
	"main": "./lib/index.js",
	"bin": "./bin/lens",
	"scripts": {
		"build:dev": "ncc build ./src/index.ts -e puppeteer -o lib",
		"build:prod": "ncc build ./src/index.ts -e puppeteer -o lib -m",
		"coverage": "jest --coverage",
		"start": "ts-node -r tsconfig-paths/register src/index.ts",
		"lint": "eslint . --ext .ts",
		"lint-and-fix": "eslint . --ext .ts --fix",
		"test": "jest"
	},
	"engines": {
		"node": ">=14",
		"yarn": ">=3.0.2"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/Magiczne/lens.git"
	},
	"keywords": [
		"automation",
		"capture",
		"layout",
		"puppeteer",
		"screen",
		"screenshot",
		"testing",
		"visual testing"
	],
	"author": {
		"name": "Michał Kleszczyński",
		"email": "michalkamilkleszczynski@gmail.com",
		"url": "https://github.com/Magiczne"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Magiczne/lens/issues"
	},
	"homepage": "https://github.com/Magiczne/lens",
	"devDependencies": {
		"@types/jest": "^27.0.1",
		"@types/lodash": "^4.14.173",
		"@types/node": "^14.17.16",
		"@types/yargs": "^17.0.2",
		"@typescript-eslint/eslint-plugin": "^4.31.1",
		"@typescript-eslint/parser": "^4.31.1",
		"@vercel/ncc": "^0.31.1",
		"boxen": "^5.1.1",
		"chalk": "^4.1.2",
		"cosmiconfig": "^7.0.1",
		"eslint": "^7.32.0",
		"eslint-plugin-node": "^11.1.0",
		"is-installed-globally": "^0.4.0",
		"jest": "^27.2.0",
		"jest-each": "^27.2.0",
		"lodash": "^4.17.21",
		"pkg-dir": "^5.0.0",
		"ts-jest": "^27.0.5",
		"ts-node": "^10.2.1",
		"tsconfig-paths": "^3.11.0",
		"typescript": "^4.4.3",
		"yargs": "^17.1.1",
		"yup": "^0.32.9"
	},
	"dependencies": {
		"puppeteer": "^10.2.0"
	},
	"packageManager": "yarn@3.0.2"
}
